<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDao" class="com.cpucode.dao.impl.UserDaoImpl"></bean>

    <bean id="userDaoSingle" class="com.cpucode.dao.impl.UserDaoImpl" scope="singleton"></bean>

    <bean id="userDaoProto" class="com.cpucode.dao.impl.UserDaoImpl" scope="prototype"></bean>

    <bean id="userDaoMethod" class="com.cpucode.dao.impl.UserDaoImpl" init-method="init" destroy-method="destory"></bean>

    <bean id="staticFactory" class="com.cpucode.factory.StaticFactory" factory-method="getUserDao"></bean>

    <bean id="factory" class="com.cpucode.factory.DynamicFactory"> </bean>
    <bean id="dynamicFactory" factory-bean="factory" factory-method="getUserDao" />

</beans>